@model IEnumerable<SportsStore.Models.Product>
@foreach (var item in Model)
{
    <div class="col-3 card  ">
        <div class="container">

            <div class="row">

                <div class="col-12"><img src="@item.Name" alt="" /></div>
                <div class="col-12 ">
                    <h5>@item.Category</h5><!--haber Tarihi-->
                    <p class="dikeyparagraf">@item.Description</p><!--içeriği-->
                </div>
            </div>

        </div>
    </div>
}